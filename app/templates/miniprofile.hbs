<div {{bind-attr class=":bx :pan :man"}}>
      <div class="background">
        {{#if hasAvatar}}
          <img {{bind-attr src="avatarUrl"}} width="100" height="100" {{bind-attr alt="fullName"}} />
        {{/if}}
        {{!-- <a href="{{extUrl 'profile' memberId}}" class="avatar img-rounded"> --}}
      </div>
      <a {{bind-attr href="profileUrl"}} class="avatar img-rounded miniprofile-avatar">
        <img {{bind-attr src="avatarUrl"}} width="100" height="100" {{bind-attr alt="fullName"}} />
      </a>

      <div class="content pal">
        <h1 class="fullname mbn">
          <a {{bind-attr href="profileUrl"}}>{{truncate fullName 100}}</a>
          {{#if isPremium}}
          <span class="tooltip">
            <i class="vicon star">*</i>
            <span class="tooltip-content">{{ t 'comp-miniprofile.is_premium'}}</span>
          </span>
          {{/if}}
        </h1>
        <h2 class="headline mbn">
          {{#if headline}}
            {{truncate headline 100}}
            {{#if companyName}}, {{companyName}}{{/if}}
          {{else}}
            {{#if positions}}
            {{! todo get first position}}
            {{/if}}
          {{/if}}
        </h2>

        {{#if tagline}}
          <div class="tagline ui-label ui-label-premium mbn mtm"><strong class="">{{truncate tagline 100}}</strong></div>
        {{/if}}

        <ul class="infos mtl mbm">

          {{#if contacts}}
          <li class="contacts pbxs rc">
            <i class="vicon mrxs fl">S</i>
            <div class="bd">
            {{#if commonContacts}}
              {{t 'comp-miniprofile.number_commonContact' count=commonContacts}}
            {{else}}
              {{t 'comp-miniprofile.number_contact' count=contacts}}
            {{/if}}
            </div>
          </li>
          {{/if}}

          {{#if positions}}
          <li class="position pbxs rc">
            <i class="vicon mrxs fl">X</i>
            <div class="bd">
              {{#each positions}}
                {{#if this.companyPageUrl}}
                  <a {{bind-attr href="position.companyPageUrl"}}>{{this.companyName}}</a>
                {{else}}
                  {{this.companyName}}
                {{/if}}
              {{/each}}
            </div>
          </li>
          {{/if}}

          {{#if schools}}
          <li class="school pbxs rc">
            <i class="vicon mrxs fl">H</i>
            <div class="bd">
              {{#each schools}}
                {{this}}
              {{/each}}
            </div>
          </li>
          {{/if}}

        </ul>

        <button class="btn-link mrs" type="button"><i class="vicon">m</i> {{t 'comp-miniprofile.contact_member'}}</a>
        {{#unless isInMyContacts}}
          <button class="btn-link add_member" type="button"><i class="vicon">a</i> {{t 'comp-miniprofile.add_member'}}</a>
        {{/unless}}
      </div>
</div>
